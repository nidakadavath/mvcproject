@model mvcproject.Models.job_1

@{
    ViewBag.Title = "Delete Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-danger text-white text-center">
            <h2>Delete Job</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center text-danger">Are you sure you want to delete this job?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">Company ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.comp_id)</dd>

                <dt class="col-sm-4 font-weight-bold">Job Title:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.job_title)</dd>

                <dt class="col-sm-4 font-weight-bold">Description:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.job_description)</dd>

                <dt class="col-sm-4 font-weight-bold">Salary:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.salary)</dd>

                <dt class="col-sm-4 font-weight-bold">Location:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.location)</dd>

                <dt class="col-sm-4 font-weight-bold">Experience:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.experience)</dd>

                <dt class="col-sm-4 font-weight-bold">Skills:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.skills)</dd>

                <dt class="col-sm-4 font-weight-bold">Job Type:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.job_type)</dd>

                <dt class="col-sm-4 font-weight-bold">Job Status:</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.job_status == "active" ? "bg-success" : "bg-secondary")">
                        @Html.DisplayFor(model => model.job_status)
                    </span>
                </dd>

                <dt class="col-sm-4 font-weight-bold">Start Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.start_date)</dd>

                <dt class="col-sm-4 font-weight-bold">End Date:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.end_date)</dd>
            </dl>

            <div class="text-center mt-4">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>

                    @Html.ActionLink("Cancel", "job_pageload", null, new { @class = "btn btn-secondary btn-lg px-4 ms-3" })
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: auto;
    }

    dt {
        font-weight: bold;
    }

    .badge {
        font-size: 1rem;
        padding: 8px 12px;
    }
</style>
